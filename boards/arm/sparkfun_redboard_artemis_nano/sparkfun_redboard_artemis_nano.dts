/dts-v1/;
#include <ambiq/ambiq_apollo3_blue.dtsi>

#include "sparkfun_redboard_artemis_nano-pinctrl.dtsi"

/ {
	model = "SparkFun RedBoard Artemis Nano";

	chosen {
		zephyr,itcm = &tcm;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-pipe = &uart0;
		zephyr,flash-controller = &flash;
	};

	aliases {
		watchdog0 = &wdt0;
		led0 = &led0;
		qwiic = &iom2;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpio0_31 19 GPIO_ACTIVE_LOW>;
			label = "LED 0";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0_31 16 GPIO_ACTIVE_LOW>;
			label = "BTN0";
		};
		button1: button_1 {
			gpios = <&gpio0_31 18 GPIO_ACTIVE_LOW>;
			label = "BTN1";
		};
		button2: button_2 {
			gpios = <&gpio0_31 19 GPIO_ACTIVE_LOW>;
			label = "BTN2";
		};
	};
};

&uart0 {
	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-names = "default";
	status = "okay";
};

&counter0 {
	status = "okay";
};

&wdt0 {
	status = "okay";
};

&iom0 {
	compatible = "ambiq,i2c";
	pinctrl-0 = <&i2c0_default>;
	pinctrl-names = "default";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	status = "okay";
};


&iom1 {
	compatible = "ambiq,spi";
	pinctrl-0 = <&spi1_default>;
	pinctrl-names = "default";
	clock-frequency = <1000000>;
	status = "okay";
};

&iom2 {
	compatible = "ambiq,i2c";
	pinctrl-0 = <&i2c2_default>;
	pinctrl-names = "default";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	status = "okay";
};

&mspi0 {
	pinctrl-0 = <&mspi0_default>;
	pinctrl-names = "default";
	status = "okay";
};

&bleif {
	pinctrl-0 = <&bleif_default>;
	pinctrl-names = "default";
	status = "okay";
};

&flash0 {
	erase-block-size = <8192>;
	write-block-size = <4>;

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Set 16KB of storage at the end of the 976KB of flash */
		storage_partition: partition@f0000 {
			label = "storage";
			reg = <0x000f0000 0x4000>;
		};
	};
};

&gpio0_31 {
	status = "okay";
};

&gpio32_63 {
	status = "okay";
};
